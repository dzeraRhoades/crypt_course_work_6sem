<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.luc.controllers.TransferController">
   <children>
      <VBox alignment="CENTER" layoutX="98.0" layoutY="48.0" prefHeight="284.0" prefWidth="404.0">
         <children>
            <HBox fx:id="chooserVBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onSearchFileButtonClick" text="search file" />
                        <TextField fx:id="fileTextField" minHeight="-Infinity" minWidth="-Infinity" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onSearchDirButtonClick" text="search directory" />
                        <TextField fx:id="dirTextField" minHeight="-Infinity" minWidth="-Infinity" />
                        <TextField fx:id="fileNameTextField" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Button fx:id="loadButton" mnemonicParsing="false" onAction="#onLoadButtonClick" text="Load" />
                  <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#onDownloadButoonClick" text="Download" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
            <Label fx:id="statusLabel" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClicked" text="Cancel" />
         </children>
      </VBox>
   </children>
</AnchorPane>
